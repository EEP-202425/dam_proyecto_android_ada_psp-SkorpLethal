<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardBackgroundColor="@color/fondoOscuro"
    app:strokeColor="@color/blanco"
    app:strokeWidth="1dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título -->
        <TextView
            android:id="@+id/textNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre Marca"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/blanco" />

        <!-- Descripción -->
        <TextView
            android:id="@+id/textDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/grisClaro" />

        <!-- Año -->
        <TextView
            android:id="@+id/textAnio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fundada en 1980"
            android:textSize="13sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/blanco" />

        <TextView
            android:id="@+id/textNumModelos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modelos: 0"
            android:textSize="13sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/blanco" />

        <!-- Botones Editar / Eliminar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Editar"
                android:textAllCaps="false"
                android:minWidth="0dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                app:cornerRadius="8dp"
                style="@style/MyButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEliminar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eliminar"
                android:textAllCaps="false"
                android:minWidth="0dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:layout_marginStart="8dp"
                app:cornerRadius="8dp"
                style="@style/MyButton"
                 />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
