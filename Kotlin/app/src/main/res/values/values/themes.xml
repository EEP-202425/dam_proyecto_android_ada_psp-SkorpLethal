<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Transportes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Paleta principal -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!-- Paleta secundaria -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>

        <!-- Fondo general oscuro -->
        <item name="android:windowBackground">@color/fondoOscuro</item>
        <item name="colorSurface">@color/fondoOscuro</item>
        <item name="colorOnSurface">@color/textoClaro</item>

        <!-- Desactivar ActionBar del decor view -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
